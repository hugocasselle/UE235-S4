{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <div class="table_reduce">
      <table class="table">
          <thead>
              <tr>
                  <th>Index</th>
                  <th>Nom</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
          {% for category in categories_index %}
              <tr>
                  <td>{{ category.id }}</td>
                  <td>{{ category.name }}</td>
                  <td>
                      <a href="{{ path('category_show', {'id': category.id}) }}" class="btn_table">Ouvrir</a>
                      <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn_table">Modifier</a>
                  </td>
              </tr>
          {% else %}
              <tr>
                  <td colspan="3" class="no_content">Aucun contenu !</td>
              </tr>
          {% endfor %}
          </tbody>
      </table>
    </div>

    <div class="cntnr">
      <div class="add_more_center">
        <a href="{{ path('category_new') }}" class="add_more">Ajouter une nouvelle catégorie</a>
      </div>
    </div>
{% endblock %}
