{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Index</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>
                    {% if article.Category.name is defined %}
                        {{ article.Category.name }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

<div class="cntnr">
  <div class="add_more_center">
    <a href="{{ path('article_index') }}" class="btn_table">Retour à la liste</a>
    <a href="{{ path('article_edit', {'id': article.id}) }}" class="back">Modifier</a>
  </div>
</div>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
